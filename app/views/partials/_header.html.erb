<header>
  <h2 class="logo">PaySymmetry</h2>
  <% if @user.present? %>
    <div class="dropdown">
      <a href="#" class="username dropdown-toggle" data-toggle="dropdown">
        <%= @user.username %> <i class="fa fa-angle-down"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right">
        <p>Logged in as<br><span class="email"><%= @user.email %></p>
        <ul class="multiple-select">
          <li>
            <a class="dropdown-item" href="#">Settings</a>
          </li>
          <li>
          <%= link_to "Log Out", logout_path, method: :delete,
                class: "dropdown-item" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</header>
