<h2>Groups</h2>
<div id="groups-list">
  <% if @user.groups.count > 0 %>
    <% @user.groups.each do |group| %>
      <%= link_to group.name, group_path(group.id) %>
    <% end %>
  <% else %>
    <p>You have no groups.</p>
  <% end %>
</div>

<% content_for :sidebar do %>
  <%= link_to "Create Group", new_group_path, 
        class: ["btn", "btn-default"] %>
<% end %>
