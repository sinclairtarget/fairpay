<%= form_tag controller: "users", action: "create" do %>
  <%= label_tag :email_label, "Email" %>
  <%= email_field_tag :email %>
  <%= label_tag :password_label, "Password" %>
  <%= password_field_tag :password %>
  <%= label_tag :password_confirm_label, "Password Confirmation" %>
  <%= password_field_tag :password_confirm %>
  <%= submit_tag "Create Account" %>
<% end %>
